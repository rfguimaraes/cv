\newcommand{\degreeName}[1]{{\textbf{#1}}}
\newcommand{\roleName}[1]{{\textbf{#1}}}
\newcommand{\location}[1]{{\textit{#1}}}

% \newcommand{\eduItem}[5]{{\degreeName{#1}} \hfill #2\\{#3} \hfill \location{#4}\\#5}
\NewDocumentCommand{\eduItem}{mmmmom}{%
    \IfNoValueTF{#5}%
    {\degreeName{#1} \hfill #2\\{#3} \hfill \location{#4}\\#6}%
    {\degreeName{#1} \emph{(#5)} \hfill  #2\\{#3} \hfill \location{#4}\\#6}%
}

\NewDocumentCommand{\expItem}{mmmmom}{%
    \IfNoValueTF{#5}%
    {\roleName{#1} \hfill #2\\{#3} \hfill \location{#4} #6}%
    {\roleName{#1} \emph{(#5)} \hfill  #2\\{#3} \hfill \location{#4} #6}%
}

